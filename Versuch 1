library("igraph")

g <- sample_pa(15)
g
plot(g, edge.arrow.size=0.2, layout=layout_with_kk)
g1 <- graph_from_literal( Merle-Thomas-Antonia-Sabine, Thomas-Sabine, Thomas-Antonia, Merle-Antonia, Merle-Thomas, Merle-Sabine)
plot(g1, layout=layout_with_kk)

ego1 <- graph_from_literal(Merle-Thomas, Merle-Antonia, Merle-Sabine, Thomas-Antonia, Thomas-Sabine)
plot(ego1, layout=layout_with_kk, main="Ego-Netzwerk ungerichtet")
ego2 <- graph_from_literal( Merle+-+Thomas, Merle+-+Antonia, Merle+-+Sabine, Thomas+-+Antonia, Thomas+-+Sabine)
plot(ego2, layout=layout_with_kk, main="Ego Netzwerk gerichtet")

